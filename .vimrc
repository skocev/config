" true color
set t_Co=256

" syntax highlighting
syntax on

" line numbers
set number

" default colorscheme
color 256-grayvim

filetype plugin indent on
" show existing tab with 4 spaces width
set tabstop=4
" when indenting with '>', use 4 spaces width
set shiftwidth=4
" On pressing tab, insert 4 spaces
set expandtab
